<div class="flex flex-col relative h-full justify-center items-center m-16 mx-32 border border-cyan-500 dark:border-lime-400 rounded-md text-lg">
    <div class="mb-14 font-semibold text-6xl absolute top-6">
        Sign in
    </div>
    <form action="/account/login" method="post" class="w-1/3">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <label class="flex justify-between items-center my-6">
            <div>Login:</div>
            <input type="text" class="dark:bg-black dark:text-white border border-cyan-400 dark:border-lime-400 focus:outline outline-cyan-400 dark:outline-lime-400 focus:ring-2 ring-cyan-400 dark:ring-lime-400 rounded-md px-2">
        </label>
        <label class="flex justify-between items-center my-6">
            <div>Password:</div>
            <input type="password" class="dark:bg-black dark:text-white border border-cyan-400 dark:border-lime-400 focus:outline outline-cyan-400 dark:outline-lime-400 focus:ring-2 ring-cyan-400 dark:ring-lime-400 rounded-md px-2">
        </label>
        <label class="flex items-center ml-4">
            <input type="checkbox" class="mr-2">
            <div>Stay signed in</div>
        </label>
    </form>
</div>
